{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "2.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.vibecooler.activityplanner",
  "developer": {
    "name": "Vibe Cooler Team",
    "websiteUrl": "https://{{DOMAIN}}",
    "privacyUrl": "https://{{DOMAIN}}/privacy",
    "termsOfUseUrl": "https://{{DOMAIN}}/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Activity Planner",
    "full": "Vibe Cooler Activity Planner for Teams"
  },
  "description": {
    "short": "Plan stress-relieving team activities with geographic intelligence",
    "full": "Vibe Cooler Activity Planner helps tech teams discover and plan stress-relieving activities, restaurants, and hotels with real-time availability, weather awareness, and collaborative planning features."
  },
  "accentColor": "#6264A7",
  "configurableTabs": [
    {
      "configurationUrl": "https://{{DOMAIN}}/teams/config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ],
      "supportedSharePointHosts": [
        "sharePointFullPage",
        "sharePointWebPart"
      ]
    }
  ],
  "staticTabs": [
    {
      "entityId": "activityplanner",
      "name": "Plan Activities",
      "contentUrl": "https://{{DOMAIN}}/teams/tab",
      "websiteUrl": "https://{{DOMAIN}}",
      "scopes": [
        "personal"
      ]
    },
    {
      "entityId": "shortlist",
      "name": "My Shortlist",
      "contentUrl": "https://{{DOMAIN}}/teams/shortlist",
      "websiteUrl": "https://{{DOMAIN}}/shortlist",
      "scopes": [
        "personal"
      ]
    }
  ],
  "bots": [
    {
      "botId": "{{BOT_ID}}",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "find restaurants",
              "description": "Find restaurants near your location"
            },
            {
              "title": "find hotels",
              "description": "Find hotels for team stays"
            },
            {
              "title": "find activities",
              "description": "Find stress-relieving team activities"
            },
            {
              "title": "plan event",
              "description": "Start planning a team event"
            },
            {
              "title": "weather",
              "description": "Check weather for outdoor activities"
            }
          ]
        }
      ]
    }
  ],
  "composeExtensions": [
    {
      "botId": "{{BOT_ID}}",
      "commands": [
        {
          "id": "searchActivities",
          "type": "query",
          "title": "Search Activities",
          "description": "Search for restaurants, hotels, and activities",
          "initialRun": true,
          "fetchTask": false,
          "context": [
            "commandBox",
            "compose"
          ],
          "parameters": [
            {
              "name": "searchQuery",
              "title": "Search",
              "description": "Search for activities",
              "inputType": "text"
            }
          ]
        },
        {
          "id": "shareActivity",
          "type": "action",
          "title": "Share Activity",
          "description": "Share an activity with your team",
          "fetchTask": true,
          "context": [
            "message",
            "commandBox",
            "compose"
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "{{DOMAIN}}",
    "login.microsoftonline.com",
    "*.azurewebsites.net",
    "*.microsoft.com"
  ],
  "webApplicationInfo": {
    "id": "{{AZURE_AD_CLIENT_ID}}",
    "resource": "api://{{DOMAIN}}/{{AZURE_AD_CLIENT_ID}}"
  },
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "ChannelMessage.Send",
          "type": "Application"
        },
        {
          "name": "TeamMember.Read.All",
          "type": "Application"
        }
      ]
    }
  },
  "showLoadingIndicator": true,
  "defaultInstallScope": "personal",
  "defaultGroupCapability": {
    "team": "tab",
    "groupchat": "tab"
  }
} 