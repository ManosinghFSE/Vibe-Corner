# Server Configuration
NODE_ENV=development
PORT=4000
CLIENT_URL=http://localhost:5173
APP_URL=http://localhost:5173
APP_DOMAIN=localhost:5173
SESSION_SECRET=your-session-secret-change-this

# Azure AD / Microsoft Entra ID
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=common
AZURE_AD_REDIRECT_URI=http://localhost:4000/api/auth/v2/callback
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/common

# Microsoft Teams
TEAMS_APP_ID=your-teams-app-id
TEAMS_APP_PASSWORD=your-teams-app-password

# Azure Services
AZURE_MAPS_KEY=your-azure-maps-key
AZURE_COSMOS_CONNECTION_STRING=your-cosmos-connection-string
AZURE_REDIS_CONNECTION_STRING=your-redis-connection-string
AZURE_SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection-string
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key
YELP_API_KEY=your-yelp-api-key
HOTELBEDS_API_KEY=your-hotelbeds-api-key
HOTELBEDS_SECRET=your-hotelbeds-secret
AMADEUS_CLIENT_ID=your-amadeus-client-id
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret
OPENWEATHER_API_KEY=your-openweather-api-key
IPAPI_KEY=your-ipapi-key
OPENTABLE_API_KEY=your-opentable-api-key

# JWT Configuration (for legacy auth)
JWT_SECRET=dev-super-secret-change-this
JWT_REFRESH_SECRET=dev-refresh-secret-change-this

# Database URLs (when migrated from mock)
DATABASE_URL=your-database-url
REDIS_URL=your-redis-url

# Supabase
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# Toggle DB usage
USE_SUPABASE=false

# Analytics
APPLICATION_INSIGHTS_KEY=your-app-insights-key
GOOGLE_ANALYTICS_ID=your-ga-id

# Email Service
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@vibecooler.com

# Feature Flags
ENABLE_MOCK_DATA=true
ENABLE_OAUTH=false
ENABLE_TEAMS_INTEGRATION=false
ENABLE_REAL_APIS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 